<UserControl x:Class="LibreriaVisualFinal.VisorProgreso"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LibreriaVisualFinal"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="260">
    <Border CornerRadius="8" Padding="10" Background="#262626" BorderBrush="#3A3A3A" BorderThickness="1">
        <StackPanel>
            <TextBlock
                Text="{Binding MensajeAccion, RelativeSource={RelativeSource AncestorType={x:Type local:VisorProgreso}}}"
                Foreground="#DCDCDC"
                FontSize="13"
                TextWrapping="Wrap" />

            <ProgressBar
                Margin="0,10,0,0"
                Minimum="0"
                Maximum="100"
                Height="16"
                Value="{Binding ProgresoValor, RelativeSource={RelativeSource AncestorType={x:Type local:VisorProgreso}}}" />
        </StackPanel>
    </Border>
</UserControl>
